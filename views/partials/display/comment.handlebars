<div class="card">
  <div class="card-content">
    <span class="card-title"><h2>{{title}}</h2></span>
    <h5>{{sneakpeak}}</h5>
  </div>
  <div class="card-action">
    <a href="https://metalinjection.net/{{url}}" class="btn">Source</a>
    <a href="/" class="btn">back</a> 
  </div>
</div>

<h4 class="col s12">User comments below</h4>

<div class="row">
  <div class="col s12">
    <form action="/api/comments/" method="post">
      <div class="row">
        <div class="input-field col s8">
          <textarea id="comment-input" name="user_comment" class="textarea" data-length="120"></textarea>
          <label for="comment-input">Comment</label>
        </div>
        <div class="input-field col s4">
          <input value="{{id}}" name="post_id" id="disabled" type="text" class="validate">
          <label for="disabled"></label>
        </div>
        
      </div>
      
      <div class="row">
        <div class="input-field">
          <button class="btn" type="submit" name="action">Submit
          </button>
        </div> 
      </div>
    
    </form>

  </div>
          
</div>